{
  "env": {
    "browser": true,
    "es2023": true,
    "node": true,
    "serviceworker": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "backups/",
    ".trash/",
    "coverage/",
    "**/*.min.js"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "no-unexpected-multiline": "error",
    "no-unmodified-loop-condition": "error",
    "no-constant-condition": ["error", { "checkLoops": true }]
  },
  "overrides": [
    {
      "files": ["src/**/*.js"],
      "rules": {
        "no-restricted-syntax": [
          "error",
          {
            "selector": "WhileStatement CallExpression[callee.property.name='exec']",
            "message": "Unguarded while(re.exec()) can cause infinite loops. Prefer String.prototype.matchAll or a guarded loop."
          }
        ]
      }
    },
    {
      "files": ["tests/**/*.js", "**/*.test.js"],
      "env": { "jest": true, "mocha": true },
      "rules": {
        "no-undef": "off"  // test runners define globals (describe, it, expect)
      }
    }
  ]
}
