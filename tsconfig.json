{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2020",
    "lib": ["es2021", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "outDir": "./dist-ts",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "types/**/*.d.ts",
    "src/**/*.ts",
    "src/utils/**/*.ts",
    "scripts/**/*.ts",
    "config/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "dist-ts", "build", "tests/**/*.js"]
}
