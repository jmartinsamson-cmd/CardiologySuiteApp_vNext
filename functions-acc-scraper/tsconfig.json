{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"]
    },
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "@azure/functions"]
  },
  "include": ["src/**/*", "MonthlyAccScrape/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
